<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Productos</title>
</head>

<body>
    <h1>Listado de productos</h1>
    <ul>
        <% products.forEach(function(product) { %>
            <li>
                <h2>
                    <%= product.title %>
                </h2>
                <h4>
                    id: <%= product.id %>
                </h4>
                <p>
                    <%= product.description %>
                </p>
                <p>Precio: $<%= product.price %>
                </p>
                <img src="<%= product.thumbnail %>" alt="Imagen del producto">
            </li>
            <% }); %>
    </ul>
</body>

</html>